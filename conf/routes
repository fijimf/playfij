# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index
GET     /game/list                        controllers.Application.gameList
GET     /conference/list                  controllers.Application.conferenceList
GET     /team/list                        controllers.Team.list
GET     /team/new                         controllers.Team.create
GET     /team/:key/edit                   controllers.Team.edit(key)
POST    /team/update                      controllers.Team.submit
POST    /team/delete                      controllers.Team.delete


GET     /app/database                     controllers.DatabaseOperations.index
POST    /app/database/rebuild             controllers.DatabaseOperations.rebuildDatabase
POST    /app/database/scrape-ncaa-teams   controllers.DatabaseOperations.scrapeNcaaTeams

GET     /api/game/{id}                    controllers.Game.get
GET     /api/game/list                    controllers.Game.list
POST    /api/game/{id}                    controllers.Game.update
POST    /api/game/new                     controllers.Game.create
POST    /api/game/{id}/delete             controllers.Game.delete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.at(path="/public", file)
